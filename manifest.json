{
  "author": "Jake, Inc.",
  "name": "Midnight Mode",
  "description": "Enjoy dark theme in popular sites of Kazakhstan (Kolesa.kz, Krisha.kz) and remove ad spam from olx.kz",
  "version": "1.1.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/night-mode-16.png",
    "32": "icons/night-mode-32.png",
    "48": "icons/night-mode-64.png",
    "64": "icons/night-mode-64.png",
    "128": "icons/night-mode-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://kolesa.kz/*",
        "https://krisha.kz/*",
        "https://id.kolesa.kz/*",
        "https://olx.kz/*",
        "https://www.olx.kz/*"
      ],
      "js": [
        "js/jquery-3.7.1.slim.min.js",
        "js/common.js"
      ],
      "css": [
        "css/custom.css"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "https://kolesa.kz/*",
        "https://id.kolesa.kz/*"
      ],
      "js": [
        "js/kolesa.js"
      ],
      "css": [
        "css/kolesa.css",
        "css/messages.css"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "https://krisha.kz/*"
      ],
      "js": [
        "js/krisha.js"
      ],
      "css": [
        "css/krisha.css",
        "css/messages.css"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "https://olx.kz/*",
        "https://*.olx.kz/*"
      ],
      "js": [
        "js/olx.js"
      ],
      "css": [
        "css/olx-init.css",
        "css/olx-init-2.css",
        "css/olx.css"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ]
}
