{
  "author": "Jake, Inc.",
  "name": "Kolesa/Krisha Dark Theme",
  "description": "Enjoy dark theme in popular sites of Kazakhstan",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "scripting"
  ],
  "icons": {
    "16": "icons/night-mode-16.png",
    "32": "icons/night-mode-32.png",
    "48": "icons/night-mode-64.png",
    "64": "icons/night-mode-64.png",
    "128": "icons/night-mode-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://kolesa.kz/*",
        "https://krisha.kz/*"
      ],
      "js": [
        "js/jquery-3.7.1.slim.min.js",
        "js/common.js"
      ]
    },
    {
      "matches": [
        "https://kolesa.kz/*"
      ],
      "js": [
        "js/kolesa.js"
      ],
      "css": [
        "css/kolesa.css",
        "css/messages.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://krisha.kz/*"
      ],
      "js": [
        "js/krisha.js"
      ],
      "css": [
        "css/krisha.css",
        "css/messages.css"
      ]
    }
  ]
}
